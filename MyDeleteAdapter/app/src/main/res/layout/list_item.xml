<?xml version="1.0" encoding="utf-8"?>
<com.example.mydeleteadapter.view.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:scrollbars="none"
    android:id="@+id/main_item_layout"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/context">
            <ImageView
                android:id="@+id/image_touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/image_touxiang"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="3dp"
                    android:text="@string/name1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/Myinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info1"
                    android:textSize="15sp"
                    android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/myDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/context"
            android:background="@drawable/btn_click_red_bg"
            android:textColor="#FFFFFF"
            android:text="删除"/>
    </RelativeLayout>

</com.example.mydeleteadapter.view.MyScrollView>